@model MedicalSimulation.Core.Models.Simulation

@{
    ViewData["Title"] = "Simulation: " + Model.Title;
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/simulation.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        /* Video Container Styling */
        #viewer-container {
            width: 100%;
            height: 100%;
            position: relative;
            background: #0a0a0a;
        }
        #viewer-container canvas {
            display: block;
            width: 100% !important;
            height: 100% !important;
        }
        
        /* MCQ Overlay - Top Center Transparent Style */
        #mcqOverlay {
            position: absolute;
            top: 40px;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(0, 0, 0, 0.75);
            backdrop-filter: blur(15px);
            border-radius: 16px;
            padding: 30px 40px;
            min-width: 450px;
            max-width: 650px;
            border: 1px solid rgba(255, 255, 255, 0.15);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.6);
            z-index: 200;
            transition: all 0.3s ease;
        }
        
        #mcqOverlay.hidden {
            display: none;
        }
        
        #questionText {
            color: white;
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 30px;
            text-align: center;
            line-height: 1.5;
        }
        
        #answersContainer {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }
        
        .mcq-answer-btn {
            background: rgba(255, 255, 255, 0.15);
            border: 2px solid rgba(255, 255, 255, 0.3);
            color: white;
            padding: 18px 25px;
            border-radius: 12px;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: left;
            font-weight: 500;
        }
        
        .mcq-answer-btn:hover {
            background: rgba(16, 185, 129, 0.3);
            border-color: #10b981;
            transform: translateX(5px);
        }
        
        .mcq-answer-btn:active {
            transform: translateX(5px) scale(0.98);
        }
        
        /* Feedback Overlay */
        .feedback-overlay {
            position: absolute;
            top: 20px;
            right: 20px;
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(10px);
            color: white;
            padding: 20px 30px;
            border-radius: 12px;
            z-index: 150;
            display: flex;
            align-items: center;
            gap: 15px;
            font-size: 18px;
            font-weight: 600;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
            transition: all 0.3s ease;
        }
        
        .feedback-overlay.hidden {
            display: none;
        }
        
        .feedback-overlay i {
            font-size: 24px;
        }
        
        .feedback-overlay .fa-check-circle {
            color: #10b981;
        }
        
        .feedback-overlay .fa-exclamation-circle {
            color: #ef4444;
        }
        
        /* Shake Animation */
        @@keyframes shake {
            0%, 100% { transform: translateX(0); }
            10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
            20%, 40%, 60%, 80% { transform: translateX(5px); }
        }
    </style>
</head>
<body class="simulation-body">
    <div class="simulation-container">
        <div class="simulation-sidebar">
            <div class="simulation-header">
                <h2>@Model.Title</h2>
            </div>
            
            <div class="simulation-progress">
                <div class="progress-item">
                    <span>Current Step:</span>
                    <strong id="currentStep">1</strong> / <span id="totalSteps">@Model.TotalStates</span>
                </div>
                <div class="progress-item">
                    <span>Score:</span>
                    <strong id="currentScore">0</strong> / <strong>120</strong>
                </div>
                <div class="progress-item">
                    <span>Time:</span>
                    <strong id="timeElapsed">00:00</strong>
                </div>
            </div>

            <div class="simulation-instructions">
                <h3>Instructions</h3>
                <p id="stepInstructions">Loading simulation...</p>
            </div>

            <div class="simulation-actions">
                <button id="exitBtn" class="btn btn-danger">
                    <i class="fas fa-times"></i> Exit
                </button>
            </div>
        </div>

        <div class="simulation-canvas-container">
            <div id="viewer-container"></div>
            
            <!-- MCQ Overlay -->
            <div id="mcqOverlay" class="hidden">
                <p id="questionText"></p>
                <div id="answersContainer"></div>
            </div>
            
            <!-- Feedback Overlay -->
            <div id="feedbackOverlay" class="feedback-overlay hidden">
                <i class="fas fa-check-circle"></i>
                <p id="feedbackText">Great job!</p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/three@0.160.0/build/three.min.js"></script>
    <script src="~/js/hotspot-overlay.js" asp-append-version="true"></script>
    <script src="~/js/state-viewer-video.js" asp-append-version="true"></script>
    <script>
        const simulationId = @Model.Id;
        const progressId = @(Context.Session.GetInt32("CurrentProgressId") ?? 0);
        let viewer = null;
        
        document.addEventListener('DOMContentLoaded', async function() {
            try {
                // Fetch states from server
                const response = await fetch(`/Simulations/GetStates?simulationId=${simulationId}`);
                const states = await response.json();
                
                if (states && states.length > 0) {
                    // Initialize video viewer
                    viewer = new StateViewerVideo('viewer-container', states, simulationId, progressId);
                    viewer.initialize();
                    
                    // Setup Exit button
                    const exitBtn = document.getElementById('exitBtn');
                    if (exitBtn) {
                        exitBtn.addEventListener('click', () => {
                            viewer.exit();
                        });
                    }
                } else {
                    document.getElementById('stepInstructions').textContent = 'No states found for this simulation.';
                }
            } catch (error) {
                console.error('Error loading simulation:', error);
                document.getElementById('stepInstructions').textContent = 'Error loading simulation. Please try again.';
            }
        });
    </script>
</body>
</html>

