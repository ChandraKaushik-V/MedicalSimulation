@{
    ViewData["Title"] = "Dashboard";
    var completedSimulations = ViewBag.CompletedSimulations ?? 0;
    var totalAttempts = ViewBag.TotalAttempts ?? 0;
    var averageScore = ViewBag.AverageScore ?? 0;
    var recentProgress = ViewBag.RecentProgress as List<MedicalSimulation.Core.Models.UserProgress> ?? new List<MedicalSimulation.Core.Models.UserProgress>();
    var feedbacks = ViewBag.Feedbacks as List<MedicalSimulation.Core.Models.Feedback> ?? new List<MedicalSimulation.Core.Models.Feedback>();
    var instructors = ViewBag.Instructors as List<MedicalSimulation.Core.Models.Instructor> ?? new List<MedicalSimulation.Core.Models.Instructor>();
}

<div class="page-header">
    <h1>
        <i class="fas fa-chart-line"></i>
        Your Dashboard
    </h1>
    <p>Track your learning progress</p>
</div>

<div class="dashboard-stats">
    <div class="stat-card-large">
        <div class="stat-icon-large">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="stat-content-large">
            <span class="stat-value-large">@completedSimulations</span>
            <span class="stat-label-large">Completed Simulations</span>
        </div>
    </div>

    <div class="stat-card-large">
        <div class="stat-icon-large">
            <i class="fas fa-redo-alt"></i>
        </div>
        <div class="stat-content-large">
            <span class="stat-value-large">@totalAttempts</span>
            <span class="stat-label-large">Total Attempts</span>
        </div>
    </div>

    <div class="stat-card-large">
        <div class="stat-icon-large">
            <i class="fas fa-star"></i>
        </div>
        <div class="stat-content-large">
            <span class="stat-value-large">@averageScore.ToString("F1")</span>
            <span class="stat-label-large">Average Score</span>
        </div>
    </div>
</div>

@if (recentProgress.Any())
{
    <div class="recent-activity">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Recent Activity</h2>
            <div class="form-group mb-0" style="min-width: 250px;">
                <select id="simulationFilter" class="form-select simulation-filter-dropdown">
                    <option value="">All Simulations</option>
                    @foreach (var sim in recentProgress.Select(p => p.Simulation).DistinctBy(s => s?.Id))
                    {
                        @if (sim != null)
                        {
                            <option value="@sim.Id">@sim.Title</option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="activity-list">
            @foreach (var progress in recentProgress)
            {
                var feedback = feedbacks.FirstOrDefault(f => f.UserProgressId == progress.Id);
                var scorePercentage = (progress.Score / (double)progress.MaxScore) * 100;
                
                <a asp-action="AttemptDetail" asp-route-id="@progress.Id" style="text-decoration: none; color: inherit;" data-simulation-id="@progress.SimulationId" class="activity-link">
                    <div class="activity-item" style="cursor: pointer; transition: all 0.3s;">
                        <div class="activity-icon" style="color: @progress.Simulation?.Specialty?.Color">
                            <i class="fas @progress.Simulation?.Specialty?.IconClass"></i>
                        </div>
                        <div class="activity-content">
                            <h4>@progress.Simulation?.Title</h4>
                            <p class="activity-meta">
                                <span>@progress.Simulation?.Specialty?.Name</span>
                                <span>â€¢</span>
                                <span>@progress.StartedAt.ToString("MMM dd, yyyy")</span>
                            </p>
                            @if (feedback != null)
                            {
                                <div class="mt-2">
                                    <small class="text-primary">
                                        <i class="fas fa-comment-dots"></i> Feedback available
                                    </small>
                                </div>
                            }
                        </div>
                        <div class="activity-score">
                            @if (progress.IsCompleted)
                            {
                                <span class="score-badge score-@(scorePercentage >= 80 ? "excellent" : scorePercentage >= 60 ? "good" : "needs-work")">
                                    @scorePercentage.ToString("F1")%
                                </span>
                            }
                            else
                            {
                                <span class="score-badge score-incomplete">
                                    In Progress
                                </span>
                            }
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
}
else
{
    <div class="empty-state">
        <i class="fas fa-clipboard-list"></i>
        <h3>No Activity Yet</h3>
        <p>Start a simulation to see your progress here</p>
        <a asp-controller="Specialties" asp-action="Index" class="btn btn-primary">
            <i class="fas fa-play"></i> Browse Simulations
        </a>
    </div>
}

@section Scripts {
    <style>
        .simulation-filter-dropdown {
            border: 2px solid #007bff;
            border-radius: 8px;
            padding: 10px 15px;
            font-weight: 500;
            background-color: #fff;
            transition: all 0.3s ease;
            box-shadow: 0 2px 4px rgba(0, 123, 255, 0.1);
        }
        
        .simulation-filter-dropdown:focus {
            border-color: #0056b3;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            outline: none;
        }
        
        .simulation-filter-dropdown:hover {
            border-color: #0056b3;
            box-shadow: 0 4px 8px rgba(0, 123, 255, 0.15);
        }
    </style>
    <script>
        document.getElementById('simulationFilter')?.addEventListener('change', function() {
            const selectedSimId = this.value;
            const activityLinks = document.querySelectorAll('.activity-link');
            
            activityLinks.forEach(link => {
                const simId = link.getAttribute('data-simulation-id');
                
                if (selectedSimId === '' || simId === selectedSimId) {
                    link.style.display = 'block';
                } else {
                    link.style.display = 'none';
                }
            });
        });
    </script>
}
