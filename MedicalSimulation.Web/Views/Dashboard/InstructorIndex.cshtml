@model List<MedicalSimulation.Core.Models.UserProgress>
@{
    ViewData["Title"] = "Instructor Dashboard";
    var students = ViewBag.Students as List<MedicalSimulation.Core.Models.Student>;
    var feedbacks = ViewBag.Feedbacks as List<MedicalSimulation.Core.Models.Feedback>;
    var selectedStudentId = ViewBag.SelectedStudentId as string;
    var selectedStudent = ViewBag.SelectedStudent as MedicalSimulation.Core.Models.Student;
    var studentSummaries = ViewBag.StudentSummaries as dynamic;
    
    var isStudentSelected = !string.IsNullOrEmpty(selectedStudentId);
}

<!-- Google Fonts (Optional, adds polish) -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
    /* Global Reset & Base Styles */
    :root {
        --primary-color: #4f46e5; /* Indigo */
        --primary-hover: #4338ca;
        --bg-color: #f3f4f6;      /* Light Gray Background */
        --card-bg: #ffffff;
        --text-main: #1f2937;
        --text-muted: #6b7280;
        --border-color: #e5e7eb;
        --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        --radius: 16px;
    }

    body {
        background-color: var(--bg-color);
        font-family: 'Inter', sans-serif;
        color: var(--text-main);
    }

    .dashboard-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2.5rem 1.5rem;
    }

    /* Typography Utilities */
    .page-title {
        font-size: 1.875rem;
        font-weight: 800;
        color: #111827;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .page-subtitle {
        color: var(--text-muted);
        margin-bottom: 2.5rem;
        font-size: 1rem;
    }

    .section-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #374151;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    /* Cards Common */
    .dashboard-card {
        background: var(--card-bg);
        border-radius: var(--radius);
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border-color);
        transition: transform 0.2s, box-shadow 0.2s;
        overflow: hidden;
    }

    /* Top Stats Row */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .stat-card-inner {
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1.25rem;
    }

    .stat-icon-wrapper {
        width: 56px;
        height: 56px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    /* Student List Grid */
    .students-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 1.5rem;
    }

    .student-card {
        display: block;
        text-decoration: none;
        color: inherit;
        height: 100%;
    }

    .student-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-md);
        border-color: var(--primary-color);
        color: inherit;
        text-decoration: none;
    }

    .student-card-header {
        padding: 1.5rem;
        display: flex;
        align-items: flex-start;
        gap: 1rem;
    }

    .student-avatar {
        width: 56px;
        height: 56px;
        border-radius: 50%;
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        font-weight: 700;
        flex-shrink: 0;
        box-shadow: 0 2px 4px rgba(99, 102, 241, 0.3);
    }

    .student-info h5 {
        font-weight: 700;
        margin-bottom: 0.25rem;
        color: #111827;
    }

    .student-meta {
        font-size: 0.875rem;
        color: var(--text-muted);
        display: flex;
        flex-direction: column;
        gap: 0.1rem;
    }

    .student-card-stats {
        background-color: #f9fafb;
        border-top: 1px solid var(--border-color);
        padding: 1rem 1.5rem;
        display: flex;
        justify-content: space-between;
        text-align: center;
    }

    .mini-stat-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--text-muted);
        font-weight: 600;
    }

    .mini-stat-value {
        font-size: 1.125rem;
        font-weight: 700;
        color: #374151;
    }

    /* Detail View specific */
    .back-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: white;
        padding: 0.75rem 1.25rem;
        border-radius: 50px;
        color: var(--text-muted);
        font-weight: 600;
        text-decoration: none;
        box-shadow: var(--shadow-sm);
        margin-bottom: 2rem;
        transition: all 0.2s;
    }

    .back-btn:hover {
        background: white;
        color: var(--primary-color);
        box-shadow: var(--shadow-md);
        transform: translateX(-2px);
    }

    .profile-hero {
        background: white;
        border-radius: var(--radius);
        padding: 2rem;
        box-shadow: var(--shadow-sm);
        margin-bottom: 2.5rem;
        display: flex;
        align-items: center;
        gap: 2rem;
        border: 1px solid var(--border-color);
    }
    
    @@media(max-width: 768px) {
        .profile-hero {
            flex-direction: column;
            text-align: center;
        }
    }

    .profile-avatar-lg {
        width: 80px;
        height: 80px;
        font-size: 2rem;
    }

    .profile-stats-row {
        display: flex;
        gap: 3rem;
        margin-top: 0.5rem;
    }
    
    .profile-stat-box {
        display: flex;
        flex-direction: column;
    }
    .profile-stat-box .val { font-size: 1.5rem; font-weight: 800; }
    .profile-stat-box .lbl { font-size: 0.875rem; color: var(--text-muted); }

    /* Attempt List */
    .attempt-list {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .attempt-card {
        background: white;
        border-radius: 12px;
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border-color);
        overflow: hidden;
    }

    .attempt-header {
        padding: 1.5rem;
        display: grid;
        grid-template-columns: 1fr auto;
        gap: 2rem;
        align-items: center;
    }

    @@media(max-width: 768px) {
        .attempt-header {
            grid-template-columns: 1fr;
            gap: 1rem;
        }
    }

    .sim-date-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        background: #f3f4f6;
        padding: 0.25rem 0.75rem;
        border-radius: 6px;
        font-size: 0.85rem;
        color: #4b5563;
        margin-top: 0.5rem;
    }

    .score-badge-circle {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        border: 4px solid #e5e7eb;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        line-height: 1;
    }
    .score-val { font-size: 1.1rem; font-weight: 800; }
    .score-max { font-size: 0.7rem; color: #9ca3af; }

    /* Feedback Form */
    .feedback-panel {
        background-color: #f8fafc;
        border-top: 1px solid var(--border-color);
        padding: 1.5rem;
    }

    .custom-textarea {
        width: 100%;
        border: 1px solid #d1d5db;
        border-radius: 8px;
        padding: 1rem;
        font-size: 0.95rem;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

    .custom-textarea:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
    }

    .btn-action {
        background-color: white;
        border: 1px solid #d1d5db;
        color: #374151;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s;
    }

    .btn-action:hover {
        background-color: #f3f4f6;
    }

    .btn-primary-action {
        background-color: var(--primary-color);
        color: white;
        border: none;
        padding: 0.6rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
    }
    
    .btn-primary-action:hover {
        background-color: var(--primary-hover);
        color: white;
    }
</style>

<div class="dashboard-container">
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" style="margin-bottom: 1.5rem;">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (isStudentSelected)
    {
        <!-- ========================= -->
        <!-- STUDENT DETAIL VIEW       -->
        <!-- ========================= -->

        <a asp-action="InstructorIndex" class="back-btn">
            <i class="fas fa-arrow-left"></i> <span>Back to Students</span>
        </a>

        <!-- Student Profile Hero -->
        <div class="profile-hero">
            <div class="student-avatar profile-avatar-lg">
                @(selectedStudent?.FirstName?.FirstOrDefault() ?? 'S')
            </div>
            <div style="flex-grow: 1;">
                <h2 class="mb-1 fw-bold">@selectedStudent?.FirstName @selectedStudent?.LastName</h2>
                <div class="text-muted mb-3">
                    <i class="far fa-id-card me-1"></i> @selectedStudent?.StudentId
                    <span class="mx-2 text-gray-300">|</span>
                    <i class="far fa-envelope me-1"></i> @selectedStudent?.Email
                </div>

                <div class="profile-stats-row">
                    <div class="profile-stat-box">
                        <span class="val text-primary">@Model.Count</span>
                        <span class="lbl">Total Attempts</span>
                    </div>
                    <div class="profile-stat-box">
                        <span class="val text-success">@Model.Count(x => x.IsCompleted)</span>
                        <span class="lbl">Completed</span>
                    </div>
                    <div class="profile-stat-box">
                        <span class="val text-warning">@Model.Count(x => !(feedbacks?.Any(f => f.UserProgressId == x.Id) ?? false))</span>
                        <span class="lbl">Need Feedback</span>
                    </div>
                    <div class="profile-stat-box">
                        <span class="val text-dark">
                            @if (Model.Any(x => x.IsCompleted))
                            {
                                @Model.Where(x => x.IsCompleted).Average(x => (x.Score / (double)x.MaxScore) * 100).ToString("F0")<small>%</small>
                            }
                            else
                            {
                                <span style="font-size: 1rem; color: #999;">N/A</span>
                            }
                        </span>
                        <span class="lbl">Avg. Score</span>
                    </div>
                </div>
            </div>
        </div>


        <div class="section-title">
            <i class="fas fa-history text-primary"></i> Simulation History
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5 dashboard-card">
                <div class="text-muted mb-3 display-4"><i class="fas fa-clipboard"></i></div>
                <h5 class="text-muted">No simulation attempts recorded.</h5>
            </div>
        }

        <div class="attempt-list">
        @foreach (var item in Model)
        {
            var feedback = feedbacks?.FirstOrDefault(f => f.UserProgressId == item.Id);
            var scorePercent = item.MaxScore > 0 ? (int)((item.Score / (double)item.MaxScore) * 100) : 0;
            var borderColor = scorePercent >= 80 ? "#10b981" : scorePercent >= 60 ? "#f59e0b" : "#ef4444";
            
            <div class="attempt-card">
                <div class="attempt-header">
                    <!-- Column 1: Info -->
                    <div>
                        <h4 class="fw-bold text-dark mb-1">@item.Simulation?.Title</h4>
                        <div class="d-flex flex-wrap gap-2">
                            <span class="sim-date-badge">
                                <i class="far fa-calendar-alt"></i> @item.StartedAt.ToLocalTime().ToString("MMM dd, yyyy")
                            </span>
                            <span class="sim-date-badge">
                                <i class="far fa-clock"></i> @item.StartedAt.ToLocalTime().ToString("hh:mm tt")
                            </span>
                            @if (item.IsCompleted) 
                            { 
                                <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 rounded-pill px-3 py-2 d-flex align-items-center">Completed</span> 
                            }
                            else
                            {
                                <span class="badge bg-warning bg-opacity-10 text-warning border border-warning border-opacity-25 rounded-pill px-3 py-2 d-flex align-items-center">In Progress</span>
                            }
                        </div>
                    </div>

                    <!-- Column 2: Score -->
                    <div class="text-center">
                        <div class="score-badge-circle" style="border-color: @borderColor;">
                            <span class="score-val" style="color: @borderColor;">@scorePercent%</span>
                        </div>
                        <div class="small text-muted mt-1">@item.Score / @item.MaxScore pts</div>
                    </div>
                </div>

                <!-- Collapse Panel -->
                <div class="collapse" id="feedback-@item.Id">
                    <div class="feedback-panel">
                        <form asp-action="GiveFeedback" method="post">
                            <input type="hidden" name="userProgressId" value="@item.Id" />
                            
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <label class="fw-bold text-dark">Instructor Feedback</label>
                                @if (feedback != null)
                                {
                                    <small class="text-muted fst-italic">Last updated: @feedback.CreatedAt.ToLocalTime().ToString("g")</small>
                                }
                            </div>
                            
                            <textarea name="feedbackText" 
                                      class="custom-textarea"
                                      rows="4"
                                      placeholder="Write your constructive feedback here..." 
                                      required>@(feedback?.FeedbackText)</textarea>
                            
                            <div class="mt-3 d-flex justify-content-end gap-2">
                                <button type="button" class="btn btn-action" data-bs-toggle="collapse" data-bs-target="#feedback-@item.Id">
                                    Cancel
                                </button>
                                <button type="submit" class="btn btn-primary-action">
                                    <i class="fas fa-paper-plane me-2"></i> Submit Feedback
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
        </div>
    }
    else
    {
        <!-- ========================= -->
        <!-- DASHBOARD OVERVIEW VIEW   -->
        <!-- ========================= -->

        <div class="d-flex justify-content-between align-items-end mb-4">
            <div>
                <h1 class="page-title"><i class="fas fa-chalkboard-teacher text-primary"></i> Instructor Dashboard</h1>
                <p class="page-subtitle">Overview of student performance and simulation activities.</p>
            </div>
        </div>
        
        <!-- Stats Row -->
        <div class="stats-grid">
            <div class="dashboard-card stat-card-inner">
                <div class="stat-icon-wrapper bg-primary bg-opacity-10 text-primary">
                    <i class="fas fa-user-graduate"></i>
                </div>
                <div>
                    <h3 class="mb-0 fw-bold display-6">@(students?.Count ?? 0)</h3>
                    <div class="text-muted">Enrolled Students</div>
                </div>
            </div>

            <div class="dashboard-card stat-card-inner">
                <div class="stat-icon-wrapper bg-success bg-opacity-10 text-success">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div>
                    <h3 class="mb-0 fw-bold display-6">@Model.Count</h3>
                    <div class="text-muted">Total Attempts</div>
                </div>
            </div>

            <div class="dashboard-card stat-card-inner">
                <div class="stat-icon-wrapper bg-warning bg-opacity-10 text-warning">
                    <i class="fas fa-comment-dots"></i>
                </div>
                <div>
                    <h3 class="mb-0 fw-bold display-6">@Model.Count(x => !(feedbacks?.Any(f => f.UserProgressId == x.Id) ?? false))</h3>
                    <div class="text-muted">Feedback Pending</div>
                </div>
            </div>
        </div>

        <div class="section-title">
            <i class="fas fa-users text-primary"></i> Student Directory
        </div>

        @if (studentSummaries == null || studentSummaries.Count == 0)
        {
            <div class="text-center py-5 dashboard-card">
                <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                <p class="text-muted">No students found.</p>
            </div>
        }
        else
        {
            <div class="students-grid">
            @foreach (var summary in studentSummaries)
            {
                <div class="dashboard-card student-card">
                    <a asp-action="InstructorIndex" asp-route-studentId="@summary.Student.ApplicationUserId" class="text-decoration-none">
                        <div class="student-card-header">
                            <div class="student-avatar">
                                @((!string.IsNullOrEmpty(summary.Student.FirstName) ? summary.Student.FirstName[0] : 'S'))
                            </div>
                            <div class="student-info">
                                <h5>@summary.Student.FirstName @summary.Student.LastName</h5>
                                <div class="student-meta">
                                    <span>ID: @summary.Student.StudentId</span>
                                    <span class="text-truncate" style="max-width: 180px;">@summary.Student.Email</span>
                                </div>
                            </div>
                        </div>

                        <div class="student-card-stats">
                            <div>
                                <div class="mini-stat-value text-primary">@summary.AttemptCount</div>
                                <div class="mini-stat-label">Attempts</div>
                            </div>
                            <div>
                                <div class="mini-stat-value text-success">@summary.CompletedCount</div>
                                <div class="mini-stat-label">Done</div>
                            </div>
                            <div>
                                <div class="mini-stat-value text-dark">
                                     @if (summary.CompletedCount > 0)
                                    {
                                        @(((double)summary.AverageScore / (summary.CompletedCount > 0 ? 120 : 1) * 100).ToString("F0"))<text>%</text>
                                    }
                                    else
                                    {
                                        <text>-</text>
                                    }
                                </div>
                                <div class="mini-stat-label">Avg</div>
                            </div>
                        </div>
                    </a>
                </div>
            }
            </div>
        }
    }
</div>