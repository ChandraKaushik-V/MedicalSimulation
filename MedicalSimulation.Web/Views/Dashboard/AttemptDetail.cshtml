@model MedicalSimulation.Core.Models.UserProgress

@{
    ViewData["Title"] = "Attempt Details";
    var feedback = ViewBag.Feedback as MedicalSimulation.Core.Models.Feedback;
    var instructor = ViewBag.Instructor as MedicalSimulation.Core.Models.Instructor;
    var allAttempts = ViewBag.AllAttempts as List<MedicalSimulation.Core.Models.UserProgress> ?? new List<MedicalSimulation.Core.Models.UserProgress>();
    var avgScore = ViewBag.AverageScoreForSimulation ?? 0.0;
    
    var scorePercentage = (Model.Score / (double)Model.MaxScore) * 100;
    var timeTaken = Model.CompletedAt.HasValue ? (Model.CompletedAt.Value - Model.StartedAt).TotalMinutes : 0;
}

<style>
    /* Custom styles to fix congestion */
    .section-header {
        padding: 1.5rem 1.5rem; /* Increased padding (py-4 equivalent) */
        background-color: #fff;
        border-bottom: 1px solid #e9ecef;
    }

    .section-title {
        font-size: 1.25rem; /* Larger font size (h4 equivalent) */
        font-weight: 700;
        color: #212529;
        margin-bottom: 0;
        display: flex;
        align-items: center;
    }

    .section-title i {
        margin-right: 1rem; /* More space between icon and text */
        color: #0d6efd; /* Primary color */
    }

    .info-item {
        display: flex;
        align-items: center;
        padding: 1rem 0; /* More vertical breathing room */
        border-bottom: 1px solid #f1f3f5;
    }
    
    .info-item:last-child {
        border-bottom: none;
        padding-bottom: 0;
    }

    .info-item:first-child {
        padding-top: 0;
    }
    
    .info-label {
        flex: 0 0 160px; /* Slightly wider label area */
        font-weight: 600;
        color: #6c757d;
        font-size: 1rem;
    }
    
    .info-label i {
        margin-right: 12px;
        width: 24px;
        text-align: center;
    }
    
    .info-value {
        flex: 1;
        font-size: 1rem;
        color: #212529;
    }

    .feedback-box {
        background-color: #f8f9fa;
        border-left: 5px solid #0d6efd;
        border-radius: 4px;
        padding: 1.5rem;
    }

    .instructor-avatar {
        width: 48px;
        height: 48px;
        background-color: #e9ecef;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
        color: #0d6efd;
    }
</style>

<div class="page-header">
    <a asp-action="Index" class="btn btn-outline-primary mb-3">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
    <h1 style="color: #667eea; font-size: 2rem;">
        <i class="fas fa-chart-bar"></i>
        Simulation Attempt Details
    </h1>
    <p class="text-muted lead">@Model.Simulation?.Title</p>
</div>

<!-- Performance Overview Cards -->
<div class="dashboard-stats mb-5">
    <div class="stat-card-large">
        <div class="stat-icon-large" style="color: @Model.Simulation?.Specialty?.Color">
            <i class="fas fa-star"></i>
        </div>
        <div class="stat-content-large">
            <span class="stat-value-large">@scorePercentage.ToString("F1")%</span>
            <span class="stat-label-large">Your Score</span>
        </div>
    </div>

    <div class="stat-card-large">
        <div class="stat-icon-large">
            <i class="fas fa-clock"></i>
        </div>
        <div class="stat-content-large">
            <span class="stat-value-large">@timeTaken.ToString("F1")</span>
            <span class="stat-label-large">Minutes Taken</span>
        </div>
    </div>

    <div class="stat-card-large">
        <div class="stat-icon-large">
            <i class="fas fa-chart-line"></i>
        </div>
        <div class="stat-content-large">
            <span class="stat-value-large">@avgScore.ToString("F1")%</span>
            <span class="stat-label-large">Your Average</span>
        </div>
    </div>

    <div class="stat-card-large">
        <div class="stat-icon-large">
            <i class="fas fa-redo-alt"></i>
        </div>
        <div class="stat-content-large">
            <span class="stat-value-large">@allAttempts.Count</span>
            <span class="stat-label-large">Total Attempts</span>
        </div>
    </div>
</div>

<!-- Performance Details and Charts -->
<div class="row g-4">
    <!-- Attempt Information -->
    <div class="col-lg-6">
        <div class="card shadow-sm h-100 border-0">
            <div class="section-header">
                <h4 class="section-title">
                    <i class="fas fa-info-circle"></i>Attempt Information
                </h4>
            </div>
            <div class="card-body p-4">
                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-flask text-primary"></i> Simulation
                    </div>
                    <div class="info-value fw-bold">@Model.Simulation?.Title</div>
                </div>
                
                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-stethoscope" style="color: @Model.Simulation?.Specialty?.Color"></i> Specialty
                    </div>
                    <div class="info-value">
                        <span style="color: @Model.Simulation?.Specialty?.Color; font-weight: 600;">
                            @Model.Simulation?.Specialty?.Name
                        </span>
                    </div>
                </div>
                
                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-play-circle text-info"></i> Started
                    </div>
                    <div class="info-value">@Model.StartedAt.ToLocalTime().ToString("MMM dd, yyyy h:mm tt")</div>
                </div>
                
                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-check-circle text-success"></i> Completed
                    </div>
                    <div class="info-value">
                        @if (Model.CompletedAt.HasValue)
                        {
                            @Model.CompletedAt.Value.ToLocalTime().ToString("MMM dd, yyyy h:mm tt")
                        }
                        else
                        {
                            <span class="badge bg-secondary">In Progress</span>
                        }
                    </div>
                </div>
                
                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-star text-warning"></i> Score
                    </div>
                    <div class="info-value">
                        <span class="badge @(scorePercentage >= 80 ? "bg-success" : scorePercentage >= 60 ? "bg-warning" : "bg-danger") fs-6 px-3 py-2">
                            @Model.Score / @Model.MaxScore (@scorePercentage.ToString("F1")%)
                        </span>
                    </div>
                </div>
                
                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-flag text-danger"></i> Status
                    </div>
                    <div class="info-value">
                        @if (Model.IsCompleted)
                        {
                            <span class="badge bg-success fs-6 px-2 py-1">
                                <i class="fas fa-check-circle"></i> Completed
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary fs-6 px-2 py-1">
                                <i class="fas fa-spinner"></i> In Progress
                            </span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Progress Chart -->
    <div class="col-lg-6">
        <div class="card shadow-sm h-100 border-0">
            <div class="section-header">
                <h4 class="section-title">
                    <i class="fas fa-chart-line"></i>Progress Trend
                </h4>
            </div>
            <div class="card-body p-4 d-flex align-items-center justify-content-center" style="min-height: 400px;">
                <canvas id="progressChart" style="width: 100%; height: 100%;"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Instructor Feedback -->
<div class="row mt-4 mb-5">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="section-header">
                <h4 class="section-title">
                    <i class="fas fa-comment-dots"></i>Instructor Feedback
                </h4>
            </div>
            
            @if (feedback != null)
            {
                <div class="card-body p-4">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
                        <div class="d-flex align-items-center mb-3 mb-md-0">
                            @if (instructor != null)
                            {
                                <div class="instructor-avatar">
                                    <i class="fas fa-user-md fa-lg"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1 text-dark">@instructor.FirstName @instructor.LastName</h5>
                                    @if (instructor.Specialization != null)
                                    {
                                        <div class="text-muted small">@instructor.Specialization.Name Specialist</div>
                                    }
                                </div>
                            }
                        </div>
                        <div class="d-flex align-items-center text-muted">
                            <i class="fas fa-calendar-alt me-2"></i>
                            <span>@feedback.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy h:mm tt")</span>
                        </div>
                    </div>
                    
                    <div class="feedback-box">
                        <h6 class="text-primary fw-bold mb-2">Comments:</h6>
                        <p class="mb-0 fs-5" style="line-height: 1.7; white-space: pre-wrap; color: #343a40;">@feedback.FeedbackText</p>
                    </div>
                </div>
            }
            else
            {
                <div class="card-body p-5 text-center">
                    <div class="mb-3 text-muted opacity-50">
                        <i class="fas fa-inbox fa-4x"></i>
                    </div>
                    <h5 class="text-secondary fw-normal">No instructor feedback available</h5>
                    <p class="text-muted mb-0">Feedback will appear here once an instructor reviews your attempt.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        // Progress Over Time Line Chart
        const progressCtx = document.getElementById('progressChart').getContext('2d');
        const allAttempts = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
            allAttempts.Select((a, index) => new { 
                attempt = allAttempts.Count - index, 
                score = (a.Score / (double)a.MaxScore) * 100,
                date = a.StartedAt.ToString("MMM dd, HH:mm"),
                rawScore = a.Score,
                maxScore = a.MaxScore
            }).Reverse()
        ));

        const avgScore = @avgScore;

        new Chart(progressCtx, {
            type: 'line',
            data: {
                labels: allAttempts.map((a, idx) => `#${idx + 1} - ${a.date}`),
                datasets: [{
                    label: 'Your Score',
                    data: allAttempts.map(a => a.score),
                    borderColor: '#0d6efd',
                    backgroundColor: 'rgba(13, 110, 253, 0.1)',
                    tension: 0.3,
                    fill: true,
                    pointRadius: 6,
                    pointHoverRadius: 8,
                    pointBackgroundColor: '#0d6efd',
                    pointBorderColor: '#fff',
                    pointBorderWidth: 2
                }, {
                    label: 'Your Average',
                    data: Array(allAttempts.length).fill(avgScore),
                    borderColor: '#198754',
                    backgroundColor: 'transparent',
                    borderDash: [5, 5],
                    borderWidth: 2,
                    pointRadius: 0,
                    fill: false
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100,
                        ticks: {
                            callback: function(value) {
                                return value + '%';
                            },
                            stepSize: 10
                        },
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                        labels: {
                            font: { size: 13 }
                        }
                    },
                    tooltip: {
                        padding: 10,
                        titleFont: { size: 14 },
                        bodyFont: { size: 13 },
                        callbacks: {
                            title: function(context) {
                                const idx = context[0].dataIndex;
                                return `Attempt #${idx + 1}`;
                            },
                            label: function(context) {
                                if (context.datasetIndex === 0) {
                                    const idx = context.dataIndex;
                                    return `Score: ${context.parsed.y.toFixed(1)}% (${allAttempts[idx].rawScore}/${allAttempts[idx].maxScore})`;
                                } else {
                                    return `Average: ${context.parsed.y.toFixed(1)}%`;
                                }
                            }
                        }
                    }
                }
            }
        });
    </script>
}